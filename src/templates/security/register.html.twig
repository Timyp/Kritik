{% extends "_template.html.twig" %}

{% block title %}
    Inscription
{% endblock %}

{% block content %}
    {{ form_start(register_form) }}
        {{ form_row(register_form.email, {
            label: 'Adresse email:'
        }) }}

        {{ form_row(register_form.pseudo, {
            label: 'Pseudo:'
        }) }}

        {{ form_row(register_form.plainPassword.first, {
            label: 'Mot de passe:'
        }) }}

        {{ form_row(register_form.plainPassword.second, {
            label: 'Confirmer le mot de passe:'
        }) }}

        <button type="submit" class="button is-fullwidth is-primary">
            Inscription
        </button>
    {{ form_end(register_form) }}
{% endblock %}

