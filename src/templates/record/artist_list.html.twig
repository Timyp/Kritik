{% extends "_template.html.twig" %}

{% block title %}
    Artistes: {{ artist_list|length }}
{% endblock %}

{% block content %}
    <div class="columns is-multiline">
        {% for artist in artist_list %}
            <div class="column is-one-third">
                <div class="box">
                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-128x128">
                                <img src="https://loremflickr.com/256/256/artist,music,musician/all?lock={{ artist.id }}" alt="Image">
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    <a href="{{ path('artiste_page', {id:artist.id}) }}" class="has-text-primary">
                                        <strong>{{ artist.name }}</strong>
                                    </a>
                                    <br>
                                    <small>
                                        <strong>Albums:</strong>
                                        {{ artist.records|length }}
                                    </small><br>
                                    {{ artist.description|ellipsis(100) }}
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
