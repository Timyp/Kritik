{% extends '_template.html.twig' %}

{% block title %}
    Artiste: {{ artist.name }}
{% endblock %}

{% block content %}
    <div class="content">
        <p>
            {{ artist.description }}
        </p>
    </div>

    <h2 class="subtitle">
        Discographie: {{ artist.records|length }}
    </h2>

    {% include 'record/_record_list.html.twig' with {
        record_list: artist.records
    } %}

{% endblock %}